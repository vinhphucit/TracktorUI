<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled state -->
    <item android:drawable="@color/nav_background_grey" android:state_enabled="false" />

    <!-- enabled and pressed state -->
    <item android:drawable="@color/black" android:state_enabled="true" android:state_pressed="true" />

    <!-- enabled and focused state -->
    <item android:drawable="@color/black" android:state_enabled="true" android:state_focused="true" />

    <!-- enabled state -->
    <item android:drawable="@color/nav_background_grey" android:state_enabled="true" />

</selector>